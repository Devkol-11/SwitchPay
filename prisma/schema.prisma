generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum PaymentStatus {
  PENDING
  PROCESSING
  SUCCEEDED
  FAILED
}

enum PaymentProvider {
  STRIPE
  PAYSTACK
  FLUTTERWAVE
}

model Merchant {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  passwordHash  String    
  role          Role      @default(MERCHANT)
  
  // Security
  isVerified    Boolean   @default(false)
  webhookSecret String?   
  
  // Relations
  refreshTokens RefreshToken[]
  apiKeys           ApiKey[] 
  merchantProviders MerchantProvider[]
  payments          Payment[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([name])
}

model RefreshToken {
  id          String   @id @default(uuid())
  token       String   @unique // Hashed or UUID
  userId      String
  merchant    Merchant @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Rotation tracking
  isUsed      Boolean  @default(false)
  isRevoked   Boolean  @default(false)
  
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  @@index([userId])
}

model ApiKey {
  id           String    @id @default(uuid())
  merchantId   String
  keyHash      String    @unique
  
  // Environment Segregation
  mode         ApiMode   @default(TEST) // TEST or LIVE
  
  // Metadata for the merchant dashboard
  name         String?   // e.g. "Mobile App Key"
  lastUsedAt   DateTime?
  isActive     Boolean   @default(true)
  
  merchant     Merchant  @relation(fields: [merchantId], references: [id])
}

enum ApiMode {
  TEST
  LIVE
}

enum Role {
  ADMIN
  MERCHANT
}

model Payment {
  id             String          @id @default(uuid())
  merchantId     String
  amount         Int
  currency       String
  cardBin     String
  cardCountry  String
  status         PaymentStatus   @default(PENDING)
  provider       PaymentProvider?
  attempts       PaymentAttempt[]
  idempotencyKey String

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt

  merchant       Merchant        @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@unique([merchantId, idempotencyKey])
  @@index([status])
  @@index([provider])
}

model MerchantProvider {
  id         String          @id @default(uuid())
  merchantId String
  provider   PaymentProvider
  encryptedApiKey  String
  encryptedPublicKey  String?
  feeStructure   Json?
  priority   Int
  enabled    Boolean         @default(true)

  merchant   Merchant        @relation(fields: [merchantId], references: [id], onDelete: Cascade)

  @@unique([merchantId, provider])
  @@index([merchantId])
}

model PaymentAttempt {
  id           String          @id @default(uuid())
  paymentId    String
  provider     PaymentProvider
  providerRef  String?
  status       PaymentStatus   @default(PENDING)
  errorCode    String?
  errorMessage String?

  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  payment      Payment         @relation(fields: [paymentId], references: [id], onDelete: Cascade)

  @@index([paymentId])
  @@index([provider])
}